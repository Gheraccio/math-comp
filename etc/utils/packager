#!/bin/bash

set -e
set -x

for pkg in ssreflect fingroup algebra field solvable character
do
pkgdir="$(git root)/opam/released/packages/coq-mathcomp-$pkg/coq-mathcomp-$pkg.1.6.1"
mkdir -p $pkgdir
cp $(git root)/mathcomp/$pkg/opam $pkgdir/opam
cp $(git root)/mathcomp/$pkg/descr $pkgdir/descr
sed -r "/^version/s?dev?1.6.1?" -i $pkgdir/opam
sed -r "/^depends.*coq-mathcomp.*/s?dev?1.6.1?" -i $pkgdir/opam
sed -r "/^(build|install)/s?make?make \"-C\" \"mathcomp/$pkg\"?" -i $pkgdir/opam
echo "http: \"http://github.com/math-comp/math-comp/archive/mathcomp-1.6.1.tar.gz\"" > $pkgdir/url
# To be fixed after the tag
echo "checksum: \"10d8a17134ddb509b4afa8d3243ee1a0\"" >> $pkgdir/url

done
